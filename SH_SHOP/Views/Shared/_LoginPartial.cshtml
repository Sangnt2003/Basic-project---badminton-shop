@using Microsoft.AspNetCore.Identity
@using SH_SHOP.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="container">
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark fs-3" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-black border-0 fs-3">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-black fs-3" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng Ký</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-black fs-3" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            </li>
        }
    </ul>

</div>