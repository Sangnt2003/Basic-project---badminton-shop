@using System.Collections;
@model IEnumerable<SH_SHOP.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center">Quản Lý Loại Sản Phẩm</h1>
<div class="container">
    <a asp-controller="Category" asp-action="Add" class="fs-4 btn btn-dark mb-4">Thêm</a>
    <table class="table">
        <thead>
            <tr>
                <th class="col-md-4">Mã sản phẩm</th>
                <th class="col-md-4">Tên sản phẩm</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="d-flex justify-content-end">
                        <a asp-action="Detail" asp-route-id="@item.Id" class="bi bi-ticket-detailed fs-4 me-3"></a>
                        <a asp-action="Update" asp-route-id="@item.Id" class="bi bi-pencil-square fs-4 me-3"></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="bi bi-trash3 fs-4 me-3"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


